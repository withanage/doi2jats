{
    "name": "citation-generator/doi2jats",
    "description": "Generate JATS XML citations from DOIs",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "CitationGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CitationGenerator\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-dom": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.84",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=8"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
